@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

	<MudAppBar Elevation="1" Dense="true">
		<MudIconButton Icon="@(_open? Icons.Material.Filled.Menu : @Icons.Material.Filled.MenuOpen)" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
		<MudText Typo="Typo.h5" Class="ml-3">Emploees</MudText>
		<MudSpacer />
		<MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/MudBlazor/MudBlazor" Target="_blank" />
	</MudAppBar>

	<MudDrawer @bind-Open="@_open"
			   Fixed="true"
			   Elevation="1"
			   Variant="@DrawerVariant.Mini"
			   OpenMiniOnHover="true" ClipMode="DrawerClipMode.Always">
		<AppNavMenu />
	</MudDrawer>

	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-6">
			@Body
		</MudContainer>
	</MudMainContent>

</MudLayout>


<div id="blazor-error-ui" data-nosnippet>
	An unhandled error has occurred.
	<a href="." class="reload">Reload</a>
	<span class="dismiss">🗙</span>
</div>

@code {
	private bool _open = true;

	private void ToggleDrawer()
	{
		_open = !_open;
	}
}
