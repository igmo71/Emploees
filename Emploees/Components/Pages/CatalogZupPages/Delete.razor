@page "/catalog_сотрудники_zup/delete"
@using Microsoft.EntityFrameworkCore
@using Emploees.Domain
@inject IDbContextFactory<Emploees.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Catalog_Сотрудники_Zup</h2>
    <hr />
    @if (catalog_сотрудники_zup is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Code</dt>
            <dd class="col-sm-10">@catalog_сотрудники_zup.Code</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@catalog_сотрудники_zup.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DeletionMark</dt>
            <dd class="col-sm-10">@catalog_сотрудники_zup.DeletionMark</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ВАрхиве</dt>
            <dd class="col-sm-10">@catalog_сотрудники_zup.ВАрхиве</dd>
        </dl>
        <EditForm method="post" Model="catalog_сотрудники_zup" OnValidSubmit="DeleteCatalog_Сотрудники_Zup" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(catalog_сотрудники_zup is null)">Delete</button> |
            <a href="/catalog_сотрудники_zups">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Catalog_Сотрудники_Zup? catalog_сотрудники_zup;

    [SupplyParameterFromQuery]
    private string? Ref_Key { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        catalog_сотрудники_zup = await context.Catalog_Сотрудники_Zup.FirstOrDefaultAsync(m => m.Ref_Key == Ref_Key);

        if (catalog_сотрудники_zup is null)
        {
            NavigationManager.NotFound();
        }
    }

    private async Task DeleteCatalog_Сотрудники_Zup()
    {
        using var context = DbFactory.CreateDbContext();
        context.Catalog_Сотрудники_Zup.Remove(catalog_сотрудники_zup!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/catalog_сотрудники_zups");
    }
}
